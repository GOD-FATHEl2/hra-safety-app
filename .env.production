# Azure Production Environment Variables
# These should be configured in Azure App Service Configuration

# Application Settings
NODE_ENV=production
PORT=8080
WEBSITE_NODE_DEFAULT_VERSION=18.x

# Database Configuration
DATABASE_URL=./data/hra.db

# JWT Configuration
# Replace with secure secret in Azure Key Vault
JWT_SECRET=your-super-secure-jwt-secret-change-in-production

# Azure AD Configuration
AZURE_CLIENT_ID=eb9865fe-5d08-43ed-8ee9-6cad32b74981
AZURE_TENANT_ID=81fa766e-a349-4867-8bf4-ab35e250a08f
AZURE_CLIENT_SECRET=your-azure-client-secret-from-app-registration

# Application URLs
ALLOWED_ORIGINS=https://hra-safety-app.azurewebsites.net
API_BASE_URL=https://hra-safety-app.azurewebsites.net

# File Upload Settings
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Security Headers
ENABLE_HTTPS_REDIRECT=true
ENABLE_SECURITY_HEADERS=true

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_TIMEOUT=3600000

# Email Configuration (if needed)
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USER=your-email@company.com
# SMTP_PASS=your-email-password